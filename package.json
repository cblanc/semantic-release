{
  "name": "@cablanchard/semantic-release",
  "description": "semantic-release configuration",
  "repository": {
    "type": "git",
    "url": "https://github.com/cblanc/semantic-release.git"
  },
  "bugs": {
    "url": "https://github.com/cblanc/semantic-release/issues/new"
  },
  "version": "1.3.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run lint && NODE_ENV=test node_modules/.bin/nyc node_modules/.bin/mocha",
    "lint": "node_modules/.bin/tslint -c tslint.json -p tsconfig.json lib/**/*.ts",
    "build": "npm run lint && node_modules/.bin/tsc",
    "release": "npm run build && npx semantic-release --no-ci",
    "watch": "node_modules/.bin/mocha --watch-extensions ts --watch"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "exit": true,
    "fullTrace": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "dist/*",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": {
    "name": "Christopher Blanchard",
    "email": "cablanchard@gmail.com",
    "url": "chrxv.com"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cablanchard/tsconfig": "~1.0.0",
    "@cablanchard/tslint": "0.0.1",
    "@types/chai": "~4.2.3",
    "@types/mocha": "~5.2.5",
    "chai": "~4.2.0",
    "mocha": "~7.0.0",
    "nyc": "~15.0.0",
    "prettier": "~1.19.1",
    "source-map-support": "~0.5.9",
    "ts-node": "~8.6.0",
    "tslint": "~5.20.0",
    "typescript": "~3.7.2"
  },
  "dependencies": {
    "@semantic-release/changelog": "~3.0.2",
    "@semantic-release/commit-analyzer": "~6.3.0",
    "@semantic-release/git": "~7.0.8",
    "@semantic-release/github": "~5.5.0",
    "@semantic-release/npm": "~5.3.1",
    "@semantic-release/release-notes-generator": "~7.3.0"
  }
}
