{
  "name": "@cablanchard/semantic-release",
  "description": "semantic-release configuration",
  "repository": {
    "type": "git",
    "url": "https://github.com/cblanc/semantic-release.git"
  },
  "bugs": {
    "url": "https://github.com/cblanc/semantic-release/issues/new"
  },
  "version": "1.3.4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run lint && NODE_ENV=test nyc mocha",
    "lint": "tslint -c tslint.json -p tsconfig.json lib/**/*.ts",
    "build": "npm run lint && tsc",
    "semantic-release": "semantic-release",
    "watch": "mocha --watch-extensions ts --watch"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "exit": true,
    "fullTrace": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "dist/*",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "engines": {
    "node": ">=8.0"
  },
  "author": {
    "name": "Christopher Blanchard",
    "email": "git@nf3.co",
    "url": "nf3.co"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "release": {
    "extends": "./dist/npm"
  },
  "devDependencies": {
    "@cablanchard/tsconfig": "~1.0.0",
    "@cablanchard/tslint": "0.0.1",
    "@types/chai": "~4.2.11",
    "@types/mocha": "~8.0.0",
    "chai": "~4.2.0",
    "mocha": "~8.1.0",
    "nyc": "~15.1.0",
    "prettier": "~2.0.5",
    "semantic-release": "~17.1.0",
    "source-map-support": "~0.5.19",
    "ts-node": "~9.0.0",
    "tslint": "~6.1.2",
    "typescript": "~3.9.3"
  },
  "dependencies": {
    "@semantic-release/changelog": "~5.0.1",
    "@semantic-release/commit-analyzer": "~8.0.1",
    "@semantic-release/git": "~9.0.0",
    "@semantic-release/github": "~7.0.7",
    "@semantic-release/npm": "~7.0.5",
    "@semantic-release/release-notes-generator": "~9.0.1"
  }
}
